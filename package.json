{
  "name": "mattmezza",
  "version": "1.0.0",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "test": "xo",
    "precommit": "lint-staged"
  },
  "license": "MIT",
  "repository": "mattmezza/site",
  "xo": {
    "extends": [
      "prettier",
      "prettier/react",
      "plugin:react/recommended"
    ],
    "env": [
      "browser",
      "node"
    ],
    "rules": {
      "react/react-in-jsx-scope": 0,
      "import/named": 0,
      "import/no-extraneous-dependencies": 0,
      "react/prop-types": 0,
      "react/display-name": 0
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run test",
      "prettier --single-quote --no-semi --write",
      "git add"
    ]
  },
  "now": {
    "alias": "matteomerola.com"
  },
  "dependencies": {
    "is-absolute-url": "2.1.0",
    "moment": "2.18.1",
    "next": "3.0.0-beta6",
    "nprogress": "0.2.0",
    "prop-types": "15.5.10",
    "react": "15.5.4",
    "react-codepen": "0.1.0",
    "react-disqus-comments": "1.0.3",
    "react-dom": "15.5.4",
    "react-fontawesome": "1.6.1",
    "react-rotating-text": "1.2.0",
    "react-syntax-highlighter": "5.6.2",
    "react-tweet-embed": "1.0.6",
    "shuffle-array": "1.0.1",
    "to-id": "1.0.5"
  },
  "devDependencies": {
    "babili-webpack-plugin": "0.1.1",
    "eslint-config-prettier": "2.1.1",
    "eslint-plugin-react": "7.0.1",
    "husky": "0.13.4",
    "lint-staged": "3.5.1",
    "prettier": "1.3.1",
    "xo": "0.18.2"
  }
}
